<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Dhl\Paket\Model\Config\ModuleConfigInterface" type="Dhl\Paket\Model\Config\ModuleConfig"/>

    <!-- Shipment classes -->
    <preference for="Dhl\Paket\Webservice\ShipmentAdapterInterface" type="Dhl\Paket\Webservice\ShipmentAdapter"/>
    <preference for="Dhl\Paket\Webservice\ShipmentClientInterface" type="Dhl\Paket\Webservice\ShipmentClient"/>
    <preference for="Dhl\Paket\Webservice\Shipment\RequestDataMapperInterface" type="Dhl\Paket\Webservice\Shipment\RequestDataMapper"/>
    <preference for="Dhl\Paket\Webservice\Shipment\ResponseDataMapperInterface" type="Dhl\Paket\Webservice\Shipment\ResponseDataMapper"/>

    <!-- SDK preferences -->
    <preference for="Dhl\Sdk\Bcs\Api\ShipmentRequestBuilderInterface" type="Dhl\Sdk\Bcs\RequestBuilder\ShipmentRequestBuilder"/>
    <preference for="Dhl\Sdk\Bcs\Api\ServiceFactoryInterface" type="Dhl\Sdk\Bcs\Webservice\ServiceFactory"/>
    <preference for="Dhl\Sdk\Bcs\Api\ShippingProductsInterface" type="Dhl\Sdk\Bcs\Model\ShippingProducts"/>

    <!-- Argument overrides -->
    <type name="\Dhl\Paket\Model\Carrier\Paket">
        <arguments>
            <argument name="shipmentProvider" xsi:type="object">Dhl\Paket\Model\Shipment\ShipmentLabelProvider\Proxy</argument>
        </arguments>
    </type>

    <type name="Dhl\Paket\Webservice\ShipmentClient">
        <arguments>
            <argument name="logger" xsi:type="object">Dhl\Paket\Model\Logger\Virtual</argument>
        </arguments>
    </type>

    <!-- virtual types -->
    <virtualType name="Dhl\Paket\Model\Logger\Virtual" type="Dhl\ShippingCore\Model\Log\ApiLogger">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="loggerHandler" xsi:type="object">Dhl\Paket\Model\Logger\Handler</item>
            </argument>
            <argument name="logEnabledConfigPath" xsi:type="const">\Dhl\Paket\Model\Config\ModuleConfig::CONFIG_XML_PATH_ENABLE_LOGGING</argument>
            <argument name="logLevelConfigPath" xsi:type="const">\Dhl\Paket\Model\Config\ModuleConfig::CONFIG_XML_PATH_LOGLEVEL</argument>
        </arguments>
    </virtualType>
</config>
