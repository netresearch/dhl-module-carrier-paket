<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Dhl_ShippingCore/etc/shipping_options.xsd">
    <carrier code="dhlpaket">
        <serviceOptions>
            <shippingOption code="parcelAnnouncement">
                <inputs>
                    <input code="enabled">
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="preferredDay">
                <inputs>
                    <input code="date">
                        <inputType>static</inputType>
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="preferredTime">
                <inputs>
                    <input code="time">
                        <inputType>static</inputType>
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="parcelstation">
                <inputs>
                    <input code="id">
                        <inputType>text</inputType>
                        <disabled>true</disabled>
                    </input>
                </inputs>
            </shippingOption>
        </serviceOptions>
        <packageOptions>
            <shippingOption code="printOnlyIfCodeable">
                <label>Use Print Only If Codeable Service</label>
                <sortOrder>10</sortOrder>
                <inputs>
                    <input code="enabled">
                        <inputType>checkbox</inputType>
                        <comment>
                            <content><![CDATA[If set to <em>Yes</em>, shipment orders will only return a label if the DHL delivery address verification succeeds.]]></content>
                        </comment>
                        <defaultConfigValue>dhlshippingsolutions/dhlpaket/general_shipping_settings/print_only_if_codeable</defaultConfigValue>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="visualCheckOfAge">
                <label>Use Visual Check of Age Service</label>
                <sortOrder>20</sortOrder>
                <inputs>
                    <input code="enabled">
                        <inputType>select</inputType>
                        <options>
                            <option id="no">
                                <label>No</label>
                                <value>0</value>
                            </option>
                            <option id="A16">
                                <label>A16</label>
                                <value>A16</value>
                            </option>
                            <option id="A18">
                                <label>A18</label>
                                <value>A18</value>
                            </option>
                        </options>
                        <comment>
                            <content>If enabled, the visual age check service will be booked during shipment orders.</content>
                        </comment>
                        <defaultConfigValue>dhlshippingsolutions/dhlpaket/additional_services/visual_check_of_age</defaultConfigValue>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="returnShipment">
                <label>Use Return Shipment Service</label>
                <sortOrder>30</sortOrder>
                <inputs>
                    <input code="enabled">
                        <inputType>checkbox</inputType>
                        <comment>
                            <content><![CDATA[If set to <em>Yes</em>, a return shipment label will be requested from the webservice.]]></content>
                        </comment>
                        <defaultConfigValue>dhlshippingsolutions/dhlpaket/additional_services/return_shipment</defaultConfigValue>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="additionalInsurance">
                <label>Use Additional Insurance Service</label>
                <sortOrder>40</sortOrder>
                <inputs>
                    <input code="enabled">
                        <inputType>checkbox</inputType>
                        <comment>
                            <content><![CDATA[If set to <em>Yes</em>, shipments will be insured with higher than standard amount.]]></content>
                        </comment>
                        <defaultConfigValue>dhlshippingsolutions/dhlpaket/additional_services/additional_insurance</defaultConfigValue>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="bulkyGoods">
                <label>Use Bulky Goods Service</label>
                <sortOrder>50</sortOrder>
                <inputs>
                    <input code="enabled">
                        <inputType>checkbox</inputType>
                        <comment>
                            <content><![CDATA[If set to <em>Yes</em>, shipments will be marked as bulk freight.]]></content>
                        </comment>
                        <defaultConfigValue>dhlshippingsolutions/dhlpaket/additional_services/bulky_goods</defaultConfigValue>
                    </input>
                </inputs>
            </shippingOption>
        </packageOptions>
    </carrier>
</carriers>
