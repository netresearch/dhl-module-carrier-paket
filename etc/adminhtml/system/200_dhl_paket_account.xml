<?xml version="1.0" ?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="account_settings" translate="label" sortOrder="200" showInDefault="1" showInWebsite="1" showInStore="1">
        <label><![CDATA[DHL Paket Account]]></label>
        <comment><![CDATA[Your account information will allow you to access the necessary API]]></comment>
        <attribute type="expanded">1</attribute>

        <field id="auth_username" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="10"
               translate="tooltip label comment" type="text">
            <label><![CDATA[HTTP Basic Authentication Username]]></label>
        </field>
        <field id="auth_password" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="20"
               translate="tooltip label comment" type="obscure">
            <label><![CDATA[HTTP Basic Authentication Password]]></label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>

        <field id="sandboxmode" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="30"
               translate="tooltip label comment" type="Dhl\ShippingCore\Model\Data\Form\Element\Checkbox">
            <label><![CDATA[Sandbox Mode]]></label>
            <button_label>Use sandbox mode.</button_label>
        </field>

        <field id="test" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="40"
               translate="tooltip label comment">
            <frontend_model>Dhl\ShippingCore\Block\Adminhtml\System\Config\Form\Field\Heading</frontend_model>
            <label>Business Customer Shipping Account Data</label>
            <comment>DHL contract customers receive the access data to the DHL Business Customer Portal via DHL Paket sales.</comment>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>

        <field id="api_username" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="40"
               translate="tooltip label comment" type="text">
            <label><![CDATA[API Credentials]]></label>
            <comment>Please talk to your account representative to add API access to your business account</comment>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>
        <field id="api_password" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="50"
               translate="tooltip label comment" type="obscure">
            <label><![CDATA[Password]]></label>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>

        <!-- EKP -->
        <field id="account_number" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="60"
               translate="tooltip label comment" type="text">
            <label><![CDATA[EKP - Uniform Customer And Product Number]]></label>
            <validate>validate-length maximum-length-10 minimum-length-10 validate-digits</validate>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>

        <!-- Participation numbers -->
        <field id="account_participations" showInDefault="1" showInWebsite="1" showInStore="0" sortOrder="70"
               translate="tooltip label comment" type="select">
            <label>Participation Numbers</label>
            <frontend_model>Dhl\Paket\Block\Adminhtml\System\Config\Form\Field\Participation</frontend_model>
            <backend_model>Dhl\Paket\Model\Adminhtml\System\Config\Backend\ArraySerialized</backend_model>
            <depends>
                <field id="sandboxmode">0</field>
            </depends>
        </field>
    </group>
</include>
