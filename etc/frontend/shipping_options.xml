<?xml version="1.0" ?>
<carriers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Dhl_ShippingCore/etc/shipping_options.xsd">
    <carrier code="dhlpaket">
        <serviceOptions>
            <shippingOption code="preferredDay">
                <inputs>
                    <input code="date">
                        <options>
                            <option id="none">
                                <label>none</label>
                            </option>
                        </options>
                    </input>
                </inputs>
            </shippingOption>
            <shippingOption code="preferredTime">
                <inputs>
                    <input code="time">
                        <options>
                            <option id="none">
                                <label>none</label>
                            </option>
                        </options>
                    </input>
                </inputs>
            </shippingOption>
        </serviceOptions>
        <compatibilityData>
            <rule id="preferredLocationAndNeighbourExclusion">
                <triggerValue>*</triggerValue>
                <action>disable</action>
                <masters>
                    <master>preferredLocation</master>
                </masters>
                <subjects>
                    <subject>preferredNeighbour</subject>
                </subjects>
                <errorMessage>Please choose only one of %1.</errorMessage>
            </rule>
            <rule id="preferredLocationAndNeighbourExclusion2">
                <triggerValue>*</triggerValue>
                <action>disable</action>
                <masters>
                    <master>preferredNeighbour</master>
                </masters>
                <subjects>
                    <subject>preferredLocation</subject>
                </subjects>
                <errorMessage>Please choose only one of %1.</errorMessage>
            </rule>
            <rule id="preferredNeighbourRequireChildren">
                <triggerValue>*</triggerValue>
                <action>require</action>
                <subjects>
                    <subject>preferredNeighbour.name</subject>
                    <subject>preferredNeighbour.address</subject>
                </subjects>
                <errorMessage>Some values for Preferred Neighbour service are missing.</errorMessage>
            </rule>
            <rule id="parcelstationShowMore">
                <triggerValue>true</triggerValue>
                <action>show</action>
                <masters>
                    <master>parcelstation.enabled</master>
                </masters>
                <subjects>
                    <subject>parcelstation.id</subject>
                    <subject>parcelstation.postNumber</subject>
                </subjects>
            </rule>
            <rule id="parcelstationRequireChildren">
                <triggerValue>true</triggerValue>
                <action>require</action>
                <masters>
                    <master>parcelstation.enabled</master>
                </masters>
                <subjects>
                    <subject>parcelstation.id</subject>
                    <subject>parcelstation.postNumber</subject>
                </subjects>
            </rule>
            <rule id="parcelstationExcludeAllOthers">
                <masters>
                    <master>parcelstation.enabled</master>
                </masters>
                <subjects>
                    <subject>preferredDay</subject>
                    <subject>preferredTime</subject>
                    <subject>preferredLocation</subject>
                    <subject>preferredNeighbour</subject>
                    <subject>parcelOutletRouting</subject>
                </subjects>
                <triggerValue>true</triggerValue>
                <action>hide</action>
            </rule>
            <rule id="allOthersExcludeParcelstation">
                <masters>
                    <master>preferredDay</master>
                    <master>preferredTime</master>
                    <master>preferredLocation</master>
                    <master>preferredNeighbour</master>
                    <master>parcelOutletRouting</master>
                </masters>
                <subjects>
                    <subject>parcelstation.enabled</subject>
                </subjects>
                <triggerValue>*</triggerValue>
                <action>hide</action>
            </rule>
        </compatibilityData>
    </carrier>
</carriers>
