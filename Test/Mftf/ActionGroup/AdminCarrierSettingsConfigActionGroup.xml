<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="NavigateToCarrierSettings">
        <amOnPage url="{{AdminCarrierSettingsConfigPage.url}}" stepKey="navigateToCarrierSettingsConfig"/>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <seeElement selector="{{AdminCarrierSettingsConfigSection.carrierGroup}}" stepKey="seeCarrierConfigGroup"/>
        <conditionalClick stepKey="expandCarrierConfiguration"
                          selector="{{AdminCarrierSettingsConfigSection.carrierGroup}}"
                          dependentSelector="{{AdminCarrierSettingsConfigSection.carrierGroupExpanded}}"
                          visible="true"/>
    </actionGroup>
    <actionGroup name="SaveAdminConfigSection">
        <click selector="{{AdminConfigSection.saveButton}}" stepKey="saveCarrierSettingsConfig"/>
        <waitForPageLoad stepKey="waitForSavedConfig"/>
        <seeElement selector="{{AdminConfigSection.saveSuccessMessage}}" stepKey="seeSaveSuccessMessage"/>
    </actionGroup>
</actionGroups>
