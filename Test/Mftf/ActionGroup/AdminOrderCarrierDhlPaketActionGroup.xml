<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="orderSelectDhlPaketFlatRateShipping">
        <click selector="{{AdminOrderFormPaymentSection.header}}" stepKey="unfocus"/>
        <waitForPageLoad stepKey="waitForJavascriptToFinish"/>
        <click selector="{{AdminOrderFormPaymentSection.getShippingMethods}}" stepKey="clickShippingMethods"/>
        <waitForElementVisible selector="{{AdminOrderFormPaymentDhlPaketSection.dhlPaketFlatRateOption}}" stepKey="waitForShippingOptions"/>
        <selectOption selector="{{AdminOrderFormPaymentDhlPaketSection.dhlPaketFlatRateOption}}" userInput="dhlpaket_flatrate" stepKey="checkFlatRate"/>
    </actionGroup>

    <actionGroup name="createDhlPaketShipment">
        <seeElement selector="{{AdminShipmentMainActionsSection.createLabelCheckbox}}" stepKey="seeCreateShippingLabel"/>
        <checkOption selector="{{AdminShipmentMainActionsSection.createLabelCheckbox}}" stepKey="checkCreateLabel"/>
        <seeElement selector="{{AdminShipmentMainActionsSection.submitShipment}}" stepKey="seeSubmitShipping"/>
        <click selector="{{AdminShipmentMainActionsSection.submitShipment}}" stepKey="clickSubmitShipment"/>
        <waitForAjaxLoad stepKey="waitForPackagingPopup" time="30"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.submitButton}}" stepKey="seeCreateShippingLabelButton"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.packageItems}}" stepKey="seePackageItems"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.packageOptions}}" stepKey="seePackageOptions"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.serviceOptions}}" stepKey="seeServiceOptions"/>
    </actionGroup>

    <actionGroup name="checkPackagingPopupCustoms">
        <seeElement selector="{{AdminShipmentPackagingPopupSection.packageCustomsValue}}" stepKey="seeCustomsValue"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.termsOfTrade}}" stepKey="seeTermsOfTrade"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.exportContentType}}" stepKey="seeExportContentType"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.explanation}}" stepKey="seeExplanation"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.packageDescription}}" stepKey="seePackageDescription"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.additionalFee}}" stepKey="seeAdditionalFee"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.placeOfCommittal}}" stepKey="seePlaceOfCommittal"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.permitNumber}}" stepKey="seePermitNumber"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.attestationNumber}}" stepKey="seeAttestationNumber"/>
        <seeElement selector="{{AdminShipmentPackagingPopupSection.electronicExportNotification}}" stepKey="seeElectronicExportNotification"/>
    </actionGroup>
</actionGroups>

