<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminSalesOrderSection">
        <!-- Sales Order View-->
        <element name="dhlRecipientStreetContainer" type="text"
                 selector="[data-ui-id='sales-order-tabs-tab-content-order-info'] .dhl-recipient-street"/>
        <element name="dhlRecipientStreetEditLink" type="button"
                 selector="[data-ui-id='sales-order-tabs-tab-content-order-info'] .dhl-recipient-address .order-shipping-address .actions a"/>
        <element name="dhlRecipientStreetName" type="text"
                 selector="[data-ui-id='sales-order-tabs-tab-content-order-info'] .dhl-recipient-street dd.values:nth-of-type(1)"/>
        <element name="dhlRecipientStreetNumber" type="text"
                 selector="[data-ui-id='sales-order-tabs-tab-content-order-info'] .dhl-recipient-street dd.values:nth-of-type(2)"/>
        <element name="dhlRecipientStreetSupplement" type="text"
                 selector="[data-ui-id='sales-order-tabs-tab-content-order-info'] .dhl-recipient-street dd.values:nth-of-type(3)"/>

        <element name="streetNameField" type="input"
                 selector="[data-index='recipient_street_name'] .admin__field-control input"/>
        <element name="streetNumberField" type="input"
                 selector="[data-index='recipient_street_number'] .admin__field-control input"/>
        <element name="streetSupplementField" type="input"
                 selector="[data-index='recipient_street_supplement'] .admin__field-control input"/>
    </section>
</sections>
