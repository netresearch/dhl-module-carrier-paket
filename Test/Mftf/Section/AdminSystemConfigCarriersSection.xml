<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <!-- DHL Paket -->
    <section name="AdminSystemConfigCarriersDhlPaketSection">
        <!-- Carrier config group selectors -->
        <element name="carrierGroup" type="button" selector="#dhlshippingsolutions_dhlpaket-head"/>
        <element name="carrierGroupExpanded" type="button" selector="#dhlshippingsolutions_dhlpaket-head:not(.open)"/>

        <!-- General settings group -->
        <element name="generalSettingsGroup" type="button"
                 selector="#dhlshippingsolutions_dhlpaket_general_shipping_settings-head"/>
        <element name="generalSettingsGroupExpanded" type="button"
                 selector="#dhlshippingsolutions_dhlpaket_general_shipping_settings-head:not(.open)"/>

        <element name="carrierActive" type="checkbox"
                 selector="[data-ui-id='checkbox-groups-dhlpaket-groups-general-shipping-settings-fields-active-value']"/>
        <element name="carrierLogging" type="checkbox"
                 selector="[data-ui-id='checkbox-groups-dhlpaket-groups-general-shipping-settings-fields-logging-value']"/>

        <!-- Checkout presentation group -->
        <element name="checkoutPresentationGroup" type="button"
                 selector="#dhlshippingsolutions_dhlpaket_checkout_settings-head"/>
        <element name="checkoutPresentationGroupExpanded" type="button"
                 selector="#dhlshippingsolutions_dhlpaket_checkout_settings-head:not(.open)"/>
        <element name="checkoutPresentationUseRatesFromSelect" type="select"
                 selector="[data-ui-id='select-groups-dhlpaket-groups-checkout-settings-fields-emulated-carrier-value']"/>
    </section>
</sections>
